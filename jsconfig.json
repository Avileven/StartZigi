{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // חובה: מאפשר גישה ל-src/* ול-api/*
      "@/*": ["src/*", "api/*"], 
      "@/lib/*": ["src/lib/*"],
      "@/api/*": ["api/*"],
      "@/components/*": ["src/components/*"]
    }
  },
  "include": [
    "src",
    "app",
    "api"
  ],
  "exclude": [
    "node_modules"
  ]
}